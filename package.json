{
  "name": "cha-notifier",
  "version": "0.0.0",
  "description": "Server for send notifications to cha-pwa",
  "main": "src",
  "scripts": {
    "start": "node src",
    "dev": "nodemon src",
    "dev:docker": "nodemon --inspect=0.0.0.0:9229 src",
    "lint": "eslint . --fix",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "echo \"Error: no test specified\" && exit 0",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags"
  },
  "engines": {
    "node": ">=10.0.0 <11.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/cha-notifier.git"
  },
  "keywords": [
    "chat"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/cha-notifier/issues"
  },
  "homepage": "https://github.com/lgaticaq/cha-notifier#readme",
  "dependencies": {
    "@godaddy/terminus": "2.5.0",
    "body-parser": "1.19.0",
    "cha-price": "2.0.1",
    "express": "4.17.1",
    "helmet": "3.20.0",
    "mongoose": "5.6.6",
    "morgan": "1.9.1",
    "raven": "2.6.4",
    "socket.io": "2.2.0",
    "web-push": "3.3.5"
  },
  "devDependencies": {
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "3.0.1",
    "lint-staged": "9.2.1",
    "nodemon": "1.19.1",
    "prettier-standard": "8.0.1",
    "socket.io-client": "2.2.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "test/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      ":library"
    ]
  }
}
